{
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "plugins": [
        "prettier-plugin-multiline-arrays",
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "overrides": [
        {
            "files": [
                "*.json"
            ],
            "options": {
                "multilineArraysWrapThreshold": 0
            }
        }
    ]
}
